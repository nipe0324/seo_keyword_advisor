<div class="row">
  <div class="col-xs-12 col-sm-9 col-md-9">
    <h1>キーワード分析一覧</h1>
  </div>
  <div class="col-xs-6 col-sm-3 col-md-3">
    <%= link_to '追加', new_keyword_set_path, class: 'btn btn-primary' %>
  </div>
</div>

<table class="table table-bordered">
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Status</th>
    <th>Analysed At</th>
    <th></th>
  </tr>
  <% @keyword_sets.each do |set| %>
    <tr>
      <th><%= set.id %></th>
      <th><%= link_to set.name, keyword_set_keywords_path(set) %></th>
      <th><%= set.status %></th>
      <th><%= set.analysed_at.try(:strftime, '%Y/%m/%d %H:%M:%S %A') %></th>
      <th><%= link_to '削除', keyword_set_path(set), method: :delete %></th>
    </tr>
  <% end %>
</table>

